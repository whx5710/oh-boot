<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iris.support.mapper.SysOrgMapper">

	<select id="getList" resultType="com.iris.support.entity.SysOrgEntity">
		select t1.*, (select t2.name from sys_org t2 where t2.id = t1.parent_id) parentName from sys_org t1
		where t1.db_status = 1
		<if test="name != null and name != ''">and name like concat('%', #{name}, '%')</if>
		<if test="parentId != null">and parent_id = #{parentId}</if>
		order by t1.tenant_id,t1.sort asc
	</select>

