<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.iris</groupId>
        <artifactId>oh-boot</artifactId>
        <version>3.0.0</version>
    </parent>
    <groupId>com.iris.server</groupId>
    <artifactId>oh-server</artifactId>
    <description>系统基础功能</description>
    <packaging>jar</packaging>

    <properties>
        <module.version>1.0.0</module.version>
        <!-- excel 工具 -->
        <easyexcel.version>4.0.3</easyexcel.version>
    </properties>
    <dependencies>
        <!-- 系统框架 -->
        <dependency>
            <groupId>com.iris</groupId>
            <artifactId>oh-framework</artifactId>
        </dependency>
        <!-- 公用模块 -->
        <dependency>
            <groupId>com.iris</groupId>
            <artifactId>oh-common</artifactId>
        </dependency>
        <!-- 基础支撑、组织架构 -->
        <dependency>
            <groupId>com.iris</groupId>
            <artifactId>oh-support</artifactId>
            <version>1.0.0.20241210</version>
        </dependency>
        <!-- 对外接口 -->
        <dependency>
            <groupId>com.iris.app</groupId>
            <artifactId>oh-module-app</artifactId>
            <version>${module.version}</version>
        </dependency>
        <!-- 协同任务 -->
        <dependency>
            <groupId>com.iris.team</groupId>
            <artifactId>oh-module-team</artifactId>
            <version>${module.version}</version>
        </dependency>
        <!-- 工作流 -->
        <dependency>
            <groupId>com.iris.flow</groupId>
            <artifactId>oh-module-flow</artifactId>
            <version>${module.version}</version>
        </dependency>
        <!-- 系统管理 -->
        <dependency>
            <groupId>com.iris.sys</groupId>
            <artifactId>oh-module-sys</artifactId>
            <version>${module.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <!-- 设置启动入口main -->
                <configuration>
                    <mainClass>com.iris.ServerApplication</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>